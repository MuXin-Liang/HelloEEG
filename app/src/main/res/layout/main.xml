<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   <ScrollView android:layout_width="fill_parent" android:id="@+id/scrollView1" android:fadeScrollbars="true" android:scrollbars="vertical" android:layout_height="wrap_content" android:layout_weight="1.00">
            <TextView android:id="@+id/textView1" android:layout_width="fill_parent" android:text="TextView" android:layout_height="fill_parent"></TextView>
    </ScrollView>
    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/bt_connect" android:text="Connect" android:onClick="doStuff"></Button>
    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/button_call" android:text="Call" android:visibility="gone"></Button>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:text="A" android:id="@+id/bt_A" android:onClick="ChangeMotion" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" />
        <Button android:text="B" android:id="@+id/bt_B" android:onClick="ChangeMotion" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" />
        <Button android:text="C" android:id="@+id/bt_C" android:onClick="ChangeMotion" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" />
        <Button android:text="D" android:id="@+id/bt_D" android:onClick="ChangeMotion" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" />
        <Button android:text="E" android:id="@+id/bt_E" android:onClick="ChangeMotion" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" />
        <Button android:text="F" android:id="@+id/bt_F" android:onClick="ChangeMotion" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" />
        <Button android:text="G" android:id="@+id/bt_G" android:onClick="ChangeMotion" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" />
    </LinearLayout>

    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/bt_save" android:text="Save" ></Button>
</LinearLayout>
